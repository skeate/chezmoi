# Plugin helper funcs <<<
setopt PUSHDSILENT

src() {
  source "$2/$1"
}

use() {
  local dir="$XDG_DATA_HOME/zsh/$1"
  if [[ ! -d $dir ]];
  then
    echo "Installing $1..."
    mkdir -p $dir
    pushd $dir
    git clone "https://github.com/$1.git" .
    popd
  else
    pushd $dir
    git pull --quiet
    popd
  fi

  if [ "$#" -gt 1 ];
  then
    "${@:2}" $dir
  fi
}
